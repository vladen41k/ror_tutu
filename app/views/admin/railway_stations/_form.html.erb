<%= form_with(model: [:admin, station],
              html:  {style: "display: #{hidden ? 'none' : 'block'}", id: "edit_railway_station_#{station.id}" },
              ) do |form| %>

  <%= render 'common/errors', resource: station %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="actions">
    <%= form.submit t('.submit', action: station.new_record? ? 'Создать' : 'Изменить')%>
  </div>
<% end %>

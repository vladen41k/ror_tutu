<p id="notice"><%= notice %></p>

<h1>Вагоны</h1>

<table>
  <thead>
  <tr>
    <th>Вагоны:</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <% @train.wagons.each do |wagon| %>
      <tr>
        <td><%= wagon.type %></td>
        <td><%= link_to "#{wagon.number}", admin_train_wagon_url(@train.id, wagon.id) %></td>
        <td><%= wagon.train.number %></td>
        <td><%= link_to 'Показать', admin_train_wagon_url(@train.id, wagon.id) %></td>
        <td><%= link_to 'Редактировать', edit_admin_train_wagon_path(@train.id, wagon.id) %></td>
        <td><%= link_to 'Удалить', admin_train_wagon_url(@train.id, wagon.id), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить вагон', new_admin_train_wagon_path %>